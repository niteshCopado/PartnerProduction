<apex:page standardStylesheets="false" standardController="amc__Project__c" extensions="amc.ProjectStatusReportPDFController" showHeader="false" renderAs="{!renderAs}">      
    <apex:stylesheet value="{!URLFOR($Resource.amc__assets, '/styles/statusreport.css')}"/>
    <!-- Header -->
    <div class="header-center">
        <div>
            {!reportDate}<br/>
            {!project.Name}
        </div>
    </div>

    <!-- Footers -->
    <div class="footer-center">
        <div class="solid-line footer-line" style="width:108%; position:relative; right:10mm;"></div>
        <table>
            <tr>
                <td class="footer-left">
                    <div>
                        Report Generated by Mission Control
                    </div>
                </td>
                <td class="footer-right">
                    <div class="footer-logos">
                        <apex:outputPanel rendered="{!corpLogo!=null}">
                            <img src="{!corpLogo}&loc=footer"/>
                        </apex:outputPanel>
                        <apex:outputPanel rendered="{!project.amc__Logo_URL__c!=null}">
                            <img src="{!project.Logo_Url__c}&loc=footer" class="project-logo"/>
                        </apex:outputPanel>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="footer-last">
        <div class="solid-line footer-line" style="width:108%; position:relative; right:10mm;"></div>
        <table>
            <tr>
                <td class="footer-left">
                    <div>
                        Report Generated by Mission Control
                    </div>
                </td>
                <td class="footer-right">
                </td>
            </tr>
        </table>
    </div>
    <!-- Front Page -->
    <div class="fp-container">
        <div class="fp-left-content">
            <div class="logo-header">
                <apex:outputPanel rendered="{!corpLogo!=null}">
                    <img src="{!corpLogo}&loc=fp"/>
                </apex:outputPanel>
            </div>
            <div class="fp-content">
                <div>
                    <apex:outputPanel rendered="{!project.amc__Logo_URL__c!=null}" layout="block">
                        <img class="main-project-logo" src="{!project.amc__Logo_URL__c}&loc=fp"/>
                    </apex:outputPanel>
                </div>
                <span>Project Status Report</span><br/>
                <span>{!reportDate}</span>
            </div>
            <div class="footer">
                <div class="solid-line footer-line"></div>
                <table class="footer-table">
                    <tr>
                        <td>
                            <b>Project</b><br/>
                            {!project.Name}<br/><br/>
                            <b>Company Name</b><br/>
                            {!project.Account__r.Name}
                        </td>
                        <td>
                            <b>Contact</b><br/>
                            {!project.Contact__r.Name}<br/>
                            {!project.Contact__r.Phone}<br/>
                            {!project.Contact__r.Email}
                            
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div style="{!IF(NOT(ISBLANK(project.Weekly_Status_Report_Hero_Image_URL__c)),'background-image: url('+project.Weekly_Status_Report_Hero_Image_URL__c+')','')}" class="fp-right-content">
        </div>
    </div>
    <!-- End Front Page -->
    
    <!-- Project Summary -->
    <div class="container">
        <div class="pd-header">
            <h1>Project Summary</h1>
            <p>A quick look overview of the {!project.Name},
                the progress that has been made to date and the
                main deliverables.</p>
        </div>
        <div class="ps-body">
            <table class="ps-table">
                <tr>
                    <td class="ps-content-left">
                        <table>
                            <tr>
                                <td>
                                    <table>
                                        <tr>
                                            <td>
                                                <div class="ps-percent">
                                                    {!completionPercent}%
                                                </div>
                                                <div>
                                                    <h1 class="ps-header-sml">Project Completion</h1>
                                                    <p class="ps-body-sml">
                                                    This is the overall progress as a
                                                    percentage, that we have made to
                                                    date on this project.
                                                    </p>
                                                </div>
                                            </td>
                                            <td>
                                                <img class="ps-bar-chart" src="{!URLFOR($Resource.assets, 'statusreport/72ppi/Asset_3Additional.png')}"/>   
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h1 class="ps-header-sml">Milestone Summary</h1>
                                    <!-- Milestone Summary Table -->
                                    <table class="ps-milestone-table">
                                        <apex:variable var="trcolor" value="#F3F4F4"/>
                                        <apex:repeat value="{!milestones}" var="m">
                                            <tr style="background-color:{!trcolor}">
                                                <td>
                                                    {!m.record.Name}
                                                </td>
                                                <td>
                                                    {!m.completionPercent}%
                                                </td>
                                                <td class="ps-milestone-table-icon">
                                                    <img src="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/'+IF(m.record.amc__Status__c='Complete','Asset_12Additional.png','Asset_11Additional.png'))}"/>
                                                </td>
                                            </tr>
                                            <apex:variable var="trcolor" value="{!IF(trcolor == '#F3F4F4', '', '#F3F4F4')}"/>
                                        </apex:repeat>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td class="ps-content-middle">
                        <table>
                            <tr>
                                <td>
                                    <div class="ps-completed">
                                        {!completedActions}/{!totalActions}
                                    </div>
                                    <div>
                                        <h1 class="ps-header-sml">Tasks Completed</h1>
                                        <p class="ps-body-sml">This is the total number of tasks
                                        that have been completed to date
                                        on this project.</p>
                                    </div>
                                </td>
                                <td>
                                    <img class="ps-checklist" src="{!URLFOR($Resource.assets, 'statusreport/72ppi/Asset_2Additional.png')}"/>   
                                </td>
                            </tr>
                            <!--project summary custom fields; from Project Status Report Fields fieldset-->
                            <tr>
                                <td class="ps-additional-container" colspan="2">
                                    <apex:outputPanel rendered="{!projectSummaryFields.size>0}">
                                        <h1 class="ps-header-sml">Additional Information</h1>
                                    </apex:outputPanel>
                                    <!-- Custom Fields Table -->
                                    <table class="ps-custom-field-table">
                                        <apex:variable var="trcolor" value="#F3F4F4"/>
                                        <apex:repeat value="{!projectSummaryFields}" var="f">
                                            <tr style="background-color:{!trcolor}">
                                                <td>
                                                    {!f.label}
                                                </td>
                                                <td>
                                                    <apex:outputField value="{!project[f.fieldName]}"/>
                                                </td>
                                            </tr>
                                            <apex:variable var="trcolor" value="{!IF(trcolor == '#F3F4F4', '', '#F3F4F4')}"/>
                                        </apex:repeat>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td class="ps-content-right inverse">
                        <div class="ps-box ps-status-box">
                            <h1 class="ps-header-sml">Project Status</h1><br/>
                            <h2 class="ps-text-lrg">{!project.amc__Status__c}</h2>
                            <img src="{!URLFOR($Resource.amc__assets, 'statusreport/150ppi/'+statusIcon)}"/>
                        </div>
                        <div class="ps-box ps-start-box">
                            <h1 class="ps-header-sml">Start Date</h1><br/>
                            <h2 class="ps-text-lrg">{!startDate}</h2>
                            <img src="{!URLFOR($Resource.amc__assets, 'statusreport/150ppi/Asset_2StatusReport_.png')}"/>
                        </div>
                        <div class="ps-box ps-end-box">
                            <h1 class="ps-header-sml">End Date</h1><br/>
                            <h2 class="ps-text-lrg">{!endDate}</h2>
                            <img src="{!URLFOR($Resource.amc__assets, 'statusreport/150ppi/Asset_2StatusReport_.png')}"/>
                        </div>
                        <apex:outputPanel styleClass="ps-box ps-hours-box" layout="block" rendered="{!project.amc__Weekly_Status_Report_Include_Time_Logs__c}">
                            <table class="ps-summary-table">
                                <tr>
                                    <td class="ps-td-collapsed">
                                        <img src="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_3StatusReport_.png')}"/>
                                    </td>
                                    <td>
                                        Hours Last Week
                                    </td>
                                    <td class="ps-text-lrg">
                                        {!hoursLastweek}
                                    </td>
                                </tr>
                            </table>
                        </apex:outputPanel>
                        <apex:outputPanel styleClass="ps-box ps-issues-box" layout="block" rendered="{!project.amc__Weekly_Status_Report_Include_Issues__c}">
                            <table class="ps-summary-table">
                                <tr>
                                    <td class="ps-td-collapsed">
                                        <img src="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_6StatusReport_.png')}"/>
                                    </td>
                                    <td>
                                        Issues
                                    </td>
                                    <td class="ps-text-lrg">
                                        {!issueCount}
                                    </td>
                                </tr>
                            </table>
                        </apex:outputPanel>
                        <apex:outputPanel styleClass="ps-box ps-risks-box" layout="block" rendered="{!project.amc__Weekly_Status_Report_Include_Risks__c}">
                            <table class="ps-summary-table">
                                <tr>
                                    <td class="ps-td-collapsed">
                                        <img src="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_5StatusReport_.png')}"/>
                                    </td>
                                    <td>
                                        Risks
                                    </td>
                                    <td class="ps-text-lrg">
                                        {!riskCount}
                                    </td>
                                </tr>
                            </table>
                        </apex:outputPanel>
                        <apex:outputPanel styleClass="ps-box ps-change-requests-box" layout="block" rendered="{!project.amc__Weekly_Status_Report_Include_CR__c}">
                            <table class="ps-summary-table">
                                <tr>
                                    <td class="ps-td-collapsed">
                                        <img src="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_4StatusReport_.png')}"/>
                                    </td>
                                    <td>
                                        Change Requests
                                    </td>
                                    <td class="ps-text-lrg">
                                        {!crCount}
                                    </td>
                                </tr>
                            </table>
                        </apex:outputPanel>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <!-- End Project Summary -->
    <!-- Project Detail -->
    <div class="container">
        <table class="pd-header-table">
            <tr>
                <td class="pd-header-table-left">
                    <div class="pd-header">
                        <h1>Project Detail</h1>
                        <p>Diving deeper into the detail of the project you can see the breakdown of progress below.</p>
                    </div>
                </td>
                <td class="pd-header-table-right">
                    <apex:outputPanel rendered="{!showLegend}">
                        <table class="pd-header-field-table">
                            <tr>
                                <th>Custom Fields Ref:</th>
                                <th>Custom 1</th>
                                <th>Custom 2</th>
                                <th>Custom 3</th>
                                <th>Custom 4</th>
                                <th>Custom 5</th>
                            </tr>
                            <apex:repeat value="{!fieldLegend}" var="l">
                                <tr>
                                    <td>
                                        <div style="{!'background-color:'+if(l='Project','#E091E7',if(l='Milestone', '#4EC9F5',if(l='Action','#67D3A4',if(l='Checklist Item','#D6547B','white'))))}" class="pd-legend-block"></div>{!l}
                                    </td>
                                    <apex:repeat value="{!fieldLegend[l]}" var="label">
                                        
                                        <td>{!label}</td>
                                    </apex:repeat>
                                </tr>

                            </apex:repeat>
                        </table>
                    </apex:outputPanel>
                </td>
            </tr>
        </table>
        <div class="pd-body">
            <table class="pd-table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Owner
                    </th>
                    <th>
                        Start
                    </th>
                    <th>
                        End
                    </th>
                    <th>
                        Custom 1
                    </th>
                    <th>
                        Custom 2
                    </th>
                    <th>
                        Custom 3
                    </th>
                    <th>
                        Custom 4
                    </th>
                    <th>
                        Custom 5
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
                <tr>
                    <td class="pd-record-name">
                        <table class="pd-margin-table">
                            <tr>
                                <td class="pd-project">
                                    
                                </td>
                                <td class="pd-tab pd-project-tab"></td>
                                <td class="pd-project-name">
                                    {!project.Name}
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <apex:image rendered="{!project.amc__Project_Owner__c!=null}" styleClass="ps-user-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_7StatusReport_.png')}"/>
                        {!project.Project_Owner__r.Name}
                    </td>
                    <td>
                        {!startDate}
                    </td>
                    <td>
                        {!endDate}
                    </td>
                    <td>
                        <apex:outputField rendered="{!customDetailFields.size>0}" value="{!project[customDetailFields[0]]}"/>
                    </td>
                    <td>
                        <!-- {!project[customDetailFields[2]]} -->
                        <apex:outputField rendered="{!customDetailFields.size>1}" value="{!project[customDetailFields[1]]}"/>
                    </td>
                    <td>
                        <!-- {!project[customDetailFields[3]]} -->
                        <apex:outputField rendered="{!customDetailFields.size>2}" value="{!project[customDetailFields[2]]}"/>
                    </td>
                    <td>
                        <!-- {!project[customDetailFields[4]]} -->
                        <apex:outputField rendered="{!customDetailFields.size>3}" value="{!project[customDetailFields[3]]}"/>
                    </td>
                    <td>
                        <!-- {!project[customDetailFields[5]]} -->
                        <apex:outputField rendered="{!customDetailFields.size>4}" value="{!project[customDetailFields[4]]}"/>
                    </td>
                    <td class="{!statusClass}">
                        <table class="pd-status-table">
                            <tr>
                                <td>
                                    <apex:image styleClass="pd-status-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/'+statusIcon)}"/>
                                </td>
                                <td>
                                    {!project.Status__c}
                                </td>
                                <td class="pd-status-percent">
                                    {!completionPercent}%
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td class="table-whitespace" colspan="10"></td>
                </tr>
                <apex:repeat value="{!milestones}" var="m">
                    <tr>
                        <td class="pd-record-name">
                            <table class="pd-margin-table">
                                <tr>
                                    <td class="pd-milestone">
                                        
                                    </td>
                                    <td class="pd-tab pd-milestone-tab"></td>
                                    <td class="pd-milestone-name">
                                        
                                            {!m.record.Name}
                                        
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td>
                            <apex:image rendered="{!m.record.amc__Milestone_Owner__c!=null}" styleClass="ps-user-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_7StatusReport_.png')}"/>
                            {!m.record.Milestone_Owner__r.Name}
                        </td>
                        <td>
                            <apex:outputField value="{!m.record.amc__Start_Date__c}"/>
                            
                        </td>
                        <td>
                            <apex:outputField value="{!m.record.amc__End_Date__c}"/>
                        </td>
                        <td>
                            <apex:outputField rendered="{!m.customFields.size>0}" value="{!m.record[m.customFields[0]]}"/>
                        </td>
                        <td>
                            <apex:outputField rendered="{!m.customFields.size>1}" value="{!m.record[m.customFields[1]]}"/>
                        </td>
                        <td>
                            <apex:outputField rendered="{!m.customFields.size>2}" value="{!m.record[m.customFields[2]]}"/>
                        </td>
                        <td>
                            <apex:outputField rendered="{!m.customFields.size>3}" value="{!m.record[m.customFields[3]]}"/>
                        </td>
                        <td>
                            <apex:outputField rendered="{!m.customFields.size>4}" value="{!m.record[m.customFields[4]]}"/>
                        </td>
                        <td class="{!m.statusClass}">
                            <table class="pd-status-table">
                                <tr>
                                    <td>
                                        <apex:image styleClass="pd-status-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/'+m.statusIcon)}"/>
                                    </td>
                                    <td>
                                        {!m.record.Status__c}
                                    </td>
                                    <td class="pd-status-percent">
                                        {!m.completionPercent}%
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td class="table-whitespace" colspan="11"></td>
                    </tr>
                        <apex:repeat value="{!m.actions}" var="a">
                            <tr>
                                <td class="pd-record-name">
                                    <table class="pd-margin-table">
                                        <tr>
                                            <td class="pd-action">

                                            </td>
                                            <td class="pd-tab pd-action-tab"></td>
                                            <td class="pd-action-name">
                                                {!a.record.Action_Name__c}
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td>
                                    <apex:image rendered="{!a.record.amc__Action_Owner__c!=null}" styleClass="ps-user-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_7StatusReport_.png')}"/>
                                    {!a.record.Action_Owner__r.Name}
                                </td>
                                <td>
                                    <apex:outputField value="{!a.record.amc__Start_Date__c}"/>
                                </td>
                                <td>
                                    <apex:outputField value="{!a.record.amc__End_Date__c}"/>
                                </td>
                                <td>
                                    <apex:outputField rendered="{!a.customFields.size>0}" value="{!a.record[a.customFields[0]]}"/>
                                </td>
                                <td>
                                    <apex:outputField rendered="{!a.customFields.size>1}" value="{!a.record[a.customFields[1]]}"/>
                                </td>
                                <td>
                                    <apex:outputField rendered="{!a.customFields.size>2}" value="{!a.record[a.customFields[2]]}"/>
                                </td>
                                <td>
                                    <apex:outputField rendered="{!a.customFields.size>3}" value="{!a.record[a.customFields[3]]}"/>
                                </td>
                                <td>
                                    <apex:outputField rendered="{!a.customFields.size>4}" value="{!a.record[a.customFields[4]]}"/>
                                </td>
                                <td class="{!a.statusClass}">
                                    <table class="pd-status-table">
                                        <tr>
                                            <td>
                                                <apex:image styleClass="pd-status-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/'+a.statusIcon)}"/>
                                            </td>
                                            <td>
                                                {!a.record.Status__c}
                                            </td>
                                            <td class="pd-status-percent">
                                                {!a.completionPercent}%
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td class="table-whitespace" colspan="11"></td>
                            </tr>
                            <apex:repeat value="{!a.items}" var="i">
                                <tr>
                                    <td class="pd-record-name">
                                        <table class="pd-margin-table">
                                            <tr>
                                                <td class="pd-item">
            
                                                </td>
                                                <td class="pd-tab pd-item-tab"></td>
                                                <td class="pd-item-name">
                                                    {!i.record.Name}
                                                </td>
                                            </tr>
                                        </table>
                                
                                    </td>
                                    <td>
                                        <apex:image rendered="{!i.record.amc__Item_Owner__c!=null}" styleClass="ps-user-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_7StatusReport_.png')}"/>
                                        {!i.record.Item_Owner__r.Name}
                                    </td>
                                    <td>
                                        <apex:outputField value="{!i.record.amc__Start_Date__c}"/>
                                    </td>
                                    <td>
                                        <apex:outputField value="{!i.record.amc__End_Date__c}"/>
                                    </td>
                                    <td>
                                        <apex:outputField rendered="{!i.customFields.size>0}" value="{!i.record[i.customFields[0]]}"/>
                                    </td>
                                    <td>
                                        <apex:outputField rendered="{!i.customFields.size>1}" value="{!i.record[i.customFields[1]]}"/>
                                    </td>
                                    <td>
                                        <apex:outputField rendered="{!i.customFields.size>2}" value="{!i.record[i.customFields[2]]}"/>
                                    </td>
                                    <td>
                                        <apex:outputField rendered="{!i.customFields.size>3}" value="{!i.record[i.customFields[3]]}"/>
                                    </td>
                                    <td>
                                        <apex:outputField rendered="{!i.customFields.size>4}" value="{!i.record[i.customFields[4]]}"/>
                                    </td>
                                    <td class="{!i.statusClass}">
                                        <table class="pd-status-table">
                                            <tr>
                                                <td>
                                                    <apex:image styleClass="pd-status-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/'+i.statusIcon)}"/>
                                                </td>
                                                <td>
                                                    {!IF(i.record.Complete__c, 'Complete', 'Planned')} 
                                                </td>
                                                <td class="pd-status-percent">
                                                    {!IF(i.record.Complete__c, '100%', '0%')} 
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="table-whitespace" colspan="11"></td>
                                </tr>
                            </apex:repeat>
                        </apex:repeat>
                </apex:repeat>
            </table>
        </div>
    </div>
    <!-- End Project Detail -->
    <!-- Gantt Chart View -->
    <apex:outputPanel layout="block" styleClass="container" rendered="{!AND(project.amc__Weekly_Status_Report_Include_Gantt__c,NOT(ISBLANK(project.amc__Project_Gantt_Image_Link__c)))}">
        <div class="pd-header">
            <h1>Gantt Chart View</h1>
            <p>The Gantt Chart provides a snapshot of the overall timeline of the project.</p>
        </div>
        <div class="g-content">
            <img src="{!project.Project_Gantt_Image_Link__c}" class="g-img"/>
        </div>
    </apex:outputPanel>
    <!-- End Gantt Chart View -->
    <!-- Time Log Summary -->
    <apex:outputPanel layout="block" styleClass="container" rendered="{!AND(project.amc__Weekly_Status_Report_Include_Time_Logs__c,timelogs.size>0)}">
        <div class="pd-header">
            <h1>Time Log Summary</h1>
            <p>Check out the areas of the Project we've been
                working on, and the progress that was made last week.</p>
        </div>
        <table class="tl-table">
            <tr>
                <th></th>
                <th>Milestone</th>
                <th>Resource</th>
                <th>Date</th>
                <th>Hours</th>
                <th>Notes</th>
            </tr>
            <apex:variable var="tltrcolor" value="#F3F4F4"/>
            <apex:repeat value="{!timeLogs}" var="t">
                <tr>
                    <td class="table-whitespace" colspan="11"></td>
                </tr>
                <tr style="background-color:{!tltrcolor}">
                    <td class="tl-icon">
                        <!-- Icon -->
                        <img src="{!URLFOR($Resource.assets, 'statusreport/150ppi/Asset_21StatusReport_.png')}"/>
                    </td>
                    <td style="tl-name">
                        {!t.Action__r.Milestone__r.Name}<br/>
                        {!t.Action__r.Name} {!t.Action__r.Action_Name__c}
                    </td>
                    <td>
                        <apex:image rendered="{!t.Project_Member__r.Name!=null}" styleClass="ps-user-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_7StatusReport_.png')}"/>
                        {!t.Project_Member__r.Name}
                    </td>
                    <td>
                        <apex:outputField value="{!t.amc__Date__c}"/>
                    </td>
                    <td>
                        <apex:outputField value="{!t.amc__Hours_Completed__c}"/>
                    </td>
                    <td class="tl-notes">
                        <apex:outputField value="{!t.amc__Time_Log_Notes_RT__c}"/>
                    </td>
                </tr>
                <apex:variable var="tltrcolor" value="{!IF(tltrcolor == '#F3F4F4', '#E4E5E6', '#F3F4F4')}"/>
            </apex:repeat>
        </table>
    </apex:outputPanel>
    <!-- End Time Log Summary -->

    <!-- Issues Summary -->
    <apex:outputPanel layout="block" styleClass="container" rendered="{!AND(project.amc__Weekly_Status_Report_Include_Issues__c,issues.size>0)}">
        <div class="pd-header">
            <h1>Issues Summary</h1>
            <p>Here's a list of Issues relating to this Project that we
                would like you to be aware of.</p>
        </div>
        <table class="is-table">
            <tr>
                <th></th>
                <th>ISSUE</th>
                <th>OWNER</th>
                <th>DATE</th>
                <th>IMPACT</th>
                <th>STATUS</th>
            </tr>
            <apex:variable var="istrcolor" value="#E4E5E6"/>
            <apex:repeat value="{!issues}" var="i">
                <tr>
                    <td class="table-whitespace" colspan="11"></td>
                </tr>
                <tr style="background-color:{!istrcolor}">
                    <td class="is-icon" style="{!'background-color:'+IF(i.Priority__c='High','#EF5B5B',IF(i.Priority__c='Medium','#BFC879',IF(i.Priority__c='Low','#67D3A4','#E4E5E6')))}">
                        <!-- Icon -->
                        <div>
                            <img src="{!URLFOR($Resource.assets, 'statusreport/150ppi/Asset_6StatusReport_.png')}"/>
                            <span class="is-status">{!i.Priority__c}</span>
                        </div>
                    </td>
                    <td style="is-name">
                        <span class="is-name-sml">{!i.Name}</span><br/>
                        {!i.Issue_Name__c}
                    </td>
                    <td>
                        <apex:image rendered="{!i.Issue_Owner__r.Name!=null}" styleClass="ps-user-image" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_7StatusReport_.png')}"/>
                        {!i.Issue_Owner__r.Name}
                    </td>
                    <td>
                        <apex:outputField value="{!i.amc__Date_Identified__c}"/>
                    </td>
                    <td>
                        {!i.amc__Impact__c}
                    </td>
                    <td>
                        {!i.amc__Status__c}
                    </td>
                </tr>
                <apex:variable var="istrcolor" value="{!IF(istrcolor == '#E4E5E6', '#F3F4F4', '#E4E5E6')}"/>
            </apex:repeat>
        </table>
    </apex:outputPanel>
    <!-- End Issues Summary -->    

    <!-- Risk Summary -->
    <apex:outputPanel layout="block" styleClass="container" rendered="{!AND(project.amc__Weekly_Status_Report_Include_Risks__c,hasRisks)}">
        <div class="pd-header">
            <h1>Risk Summary</h1>
            <p>We are currently tracking these Risks in relation to this Project.</p>
        </div>
        <table class="r-table">
            <apex:repeat value="{!riskMap}" var="k">
                <tr>
                    <td class="r-table-tab">
                        <table class="r-table-inner">
                            <tr>
                                <td>
                                    <!-- Icon -->
                                    <apex:image url="{!URLFOR($Resource.amc__assets, 'statusreport/150ppi/Asset_5StatusReport_.png')}"/>
                                    <span class="r-tab-text">{!k}</span>
                                </td>
                                <td class="r-inner-pad"></td>
                            </tr>
                        </table>
                    </td>
                    <td colspan="4"></td>
                </tr>
                <apex:repeat value="{!riskMap[k]}" var="r">
                    <tr class="r-bg">
                        <td>
                            {!r.Name}
                        </td>
                        <td>
                            <apex:image styleClass="r-logo" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/'+IF(r.Current_Status__c='Increasing', 'Asset_14StatusReport_.png',IF(r.Current_Status__c='Decreasing', 'Asset_13StatusReport_.png', 'Asset_15StatusReport_.png')))}"/>
                            <span class="r-table-header">STATUS</span><br/>
                            {!r.Current_Status__c}
                        </td>
                        <td>
                            <apex:image styleClass="r-logo" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/'+IF(r.Proximity__c='Short', 'Asset_17StatusReport_.png',IF(r.Proximity__c='Long', 'Asset_16StatusReport_.png', 'Asset_16StatusReport_.png')))}"/>
                            <span class="r-table-header">PROXIMITY</span><br/>
                            {!r.Proximity__c}
                        </td>
                        <td style="{!'background-color:'+IF(r.Probability_Rating__c='High', '#EF5B5B',IF(r.Probability_Rating__c='Medium','#BFC879',IF(r.Probability_Rating__c='Low','#67D3A4','#E4E5E6')))}">
                            <span class="r-table-header ">PROBABILITY</span><br/>
                            {!r.Probability_Rating__c}
                        </td>
                        <td style="{!'background-color:'+IF(r.Impact_Rating__c='High', '#EF5B5B',IF(r.Impact_Rating__c='Medium','#BFC879',IF(r.Impact_Rating__c='Low','#67D3A4','#E4E5E6')))}">
                            <span class="r-table-header">IMPACT</span><br/>
                            {!r.Impact_Rating__c}
                        </td>
                    </tr>
                    <tr>
                        <td class="table-whitespace whitespace-sml" colspan="5"></td>
                    </tr>
                </apex:repeat>
                <tr>
                    <td class="table-whitespace whitespace-lrg" colspan="5"></td>
                </tr>
            </apex:repeat>
        </table>
    </apex:outputPanel>
    <!-- End Risk Summary -->

     <!-- Change Requests -->
     <apex:outputPanel layout="block" styleClass="container" rendered="{!AND(project.amc__Weekly_Status_Report_Include_CR__c,crs.size>0)}">
        <div class="pd-header">
            <h1>Change Requests</h1>
            <p>These Change Requests have been incorporated into
                the scope of the Project.</p>
        </div>
        <table class="cr-table">
            <tr>
                <th></th>
                <th>REQUEST</th>
                <th>IMPACT</th>
                <th>CHANGE AMOUNT</th>
            </tr>
            <apex:repeat value="{!crs}" var="cr">
                <tr>
                    <td class="table-whitespace" colspan="4"></td>
                </tr>
                <tr style="background-color:#E4E5E6">
                    <td class="cr-name">
                        <apex:image styleClass="cr-icon" url="{!URLFOR($Resource.amc__assets, 'statusreport/72ppi/Asset_18StatusReport_.png')}"/>
                        {!cr.Name}
                    </td>
                    <td class="cr-reg">
                        <apex:outputField value="{!cr.amc__Request__c}"/>
                    </td>
                    <td class="cr-reg">
                        <apex:outputField value="{!cr.amc__Impact__c}"/>
                    </td>
                    <td class="cr-amount">
                        <apex:outputField value="{!cr.amc__Change_Amount__c}"/>
                    </td>
                </tr>
            </apex:repeat>
        </table>
     </apex:outputPanel>
    <!-- End Change Requests -->
