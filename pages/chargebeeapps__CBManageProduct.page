                                                <apex:param name="passString" value="fromselectlist" assignTo="{!addontrigger}" />
                                            </apex:actionSupport>
                                            <apex:selectOptions value="{!addonOptionsNonrecur}" />
                                        </apex:selectList>
                                    </apex:outputPanel>
                                </td>
                                <td style="{!IF((key1.isNewPricingModel),'display:none','')}">
