                                            <apex:actionSupport event="onchange" reRender="addons_list"/>
                                            <apex:selectOptions value="{!addonevents}" />
                                        </apex:selectList>
                                    </apex:outputPanel>
                                </td>   
                                <td style="{!IF((key1.status ==2 || key1.status ==3) && !(key1.event=='IMMEDIATELY' || key1.event=='SUBSCRIPTION_CREATION'),'','display:none;')}">
                                	<apex:outputPanel styleClass="optionalInput" layout="block" rendered="{!IF((key1.status ==2 || key1.status ==3) && !(key1.event=='IMMEDIATELY' || key1.event=='SUBSCRIPTION_CREATION'),'true','false')}">
										<div class="cb-cell-header">Apply charges</div>
                                        <apex:outputPanel styleClass="optionalBlock" layout="block" />
                                        <apex:selectList html-data-id="addonCharge_{!nonRecCount}" value="{!key1.chargeFrequency}" multiselect="false" size="1">
                                            <apex:selectOptions value="{!addonChargeFrequency}" />
                                        </apex:selectList>
                                	</apex:outputPanel>
                                </td>
                                <td>
                                    <apex:outputPanel styleClass="optionalInput" layout="block" rendered="{!IF((key1.status ==2 || key1.status ==3),'true','false')}">
                                     	<div class="cb-cell-header">Number of days of service provided</div>
                                        <apex:outputPanel styleClass="optionalBlock" layout="block" />
                                        <apex:inputText html-data-id="addonService_{!nonRecCount}" value="{!key1.servicePeriodInDays}" html-min="1" html-max="730" onfocus="setIntegerField(this);"/>
                                    </apex:outputPanel>
                                </td>
                                <td></td>
                                <td style="{!IF((isBillingCyclesEnabled),'','display:none')}"></td>
                                <td style="{!IF((key1.event=='IMMEDIATELY' || key1.event=='SUBSCRIPTION_CREATION'),'','display:none;')}"></td>
                                <td class="cb-link-padding">
                                    <apex:commandLink value="Remove" action="{!delAddonsNewList}" rendered="{!IF(key1.removeAddon,'true','false')}" onclick="NonRecurAddon1({!nonRecCount});return false;"
