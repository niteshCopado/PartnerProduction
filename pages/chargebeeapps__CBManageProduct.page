                                </apex:outputPanel>
                            </td>
                            <td style="width:60%">
                                <span class="cb-currency-field">
                                <apex:outputText id="planPriceCurrency" value="{!plan.planCurrency}"> </apex:outputText>
                                <apex:inputText id="planPriceText" html-min="0" onfocus="setNumberField(this);makeReadOnly(this,'{!IF(canOverride && plan.canOverridePrice,'false','true')}')"
