                                                <apex:outputPanel rendered="{!allContacts.size>0}">
                                                    <optgroup label="SF Contacts">
                                                        <apex:repeat value="{!allContacts}" var="c">
                                                            <option value="{!c.Email}">{!c.Name} ({!c.Email})</option>
                                                        </apex:repeat>
                                                    </optgroup>
                                                </apex:outputPanel>
