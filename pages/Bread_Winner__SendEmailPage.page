                                                        </apex:outputPanel>
                                                        <apex:outputPanel rendered="{!!if(c.isSelected,true,false)}">
                                                            <option value="{!c.emailAddress}">{!c.emailAddress}</option>
                                                        </apex:outputPanel>
                                                    </apex:repeat>
                                                </optgroup>
                                            </select>
