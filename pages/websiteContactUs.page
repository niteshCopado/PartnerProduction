                        </section>
                        <section class="6u">
                            <h3>Head Office</h3>
                            <p>Calle Basauri 6, planta 2, local 3, Madrid, 28023, Spain</p>
                            <img src="{!$Resource.WebsiteOfficeLocationMadrid}" alt="Copado Solutions Madrid Office"/>
                        </section>
                                        
                        <script>
                            function addH() {
                                document.getElementById('oid').value='00Db0000000YN5R';
                                document.getElementById('lead_source').value='Web';
                                document.getElementById('retURL').value='http://www.copa.do/ThankYou?kw=sales';
                            }
                            var q = window.location.search.substring(1);
                            if(q.indexOf('install=PleaseEnableEE')>-1){
                                document.getElementById('description').value='Please enable the Enterprise Edition features for my 30-day trial.  The Org Id is: ';
                                document.getElementById('00Nb0000009Kn63').value = 'Trial';
                                document.getElementById('00Nb0000009Kn68').value = 'Enterprise';
                            }
