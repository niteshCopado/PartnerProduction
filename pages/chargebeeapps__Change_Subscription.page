        <script>
        function makeReadOnly(ele, flag){
             
             if(flag == 'true'){
                 ele.readOnly = true;
                ele.classList.add("nobordertext");
             }
             else{
                 ele.readOnly = false;
                 ele.classList.remove("nobordertext");
                 }
         }
         function setNumberField(ele){
            if(ele){
                ele.setAttribute("type","number");
                ele.setAttribute("step", "0.01");
            }
        }
        function setIntegerField(ele) {
                if (ele) {
                    ele.setAttribute("type", "number");
                    ele.setAttribute("step", "1");
                    ele.onkeypress = function(e){
                        if(e.key == '.' || e.key == 'e' || e.key == 'E'){
                            return false;
                        }
                    }
                }
            }
            function planCheck(ele) {
                var e = document.getElementById("container:formc:mainpb:pid");
                var name = e.selectedIndex;
                if (name == "0") {
                    alert("Select a plan!");
                    return;
                }
                if(document.getElementById('container:formc').checkValidity()){
                    ele.disabled=true;
                    ele.classList.add('btnDisabled');
                    createCus();
                }
            }
                function complete() {
                        $("html, body").animate({ scrollTop: 0 }, "slow");
                    }
                    function findPriceDetails()
                    {  
                        CbPriceBookEntryQty();
