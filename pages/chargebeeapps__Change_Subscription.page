                        methodOneInJavascript1(aaa);
                    }
                    function NonRecurAddon(bbb) {
                        methodTwoInJavascript(bbb);
                    }

                    function NonRecurAddon1(bbb) {
                        methodTwoInJavascript1(bbb);
                    }
                    function removeCoupon(couponIndex) {
                        removeCouponActionFunction(couponIndex);
                    }
                   
                   function selPage(val){
                        
                        selectPage(val);   
                   }
                   
                   function cancel(){
                        
                        cancelPage();   
                   }
                   function disableOpts(){
                       var r = document.getElementById('container:formc:j_id95:j_id99:1').checked;
                       
                       if(r===true){
                           
                               document.getElementById('container:formc:j_id105:j_id109:0').disabled=true;
