<apex:page showHeader="false" id="SiteTemplate" controller="kugo2p.OrderPDFExt">
  <style>
  #background {
    background-image:url('https://kugamon.secure.force.com/resource/1570240730000/BackgroundPattern');
    width:100%;
    height:100%;
    padding-top:40px;
    padding-bottom:40%;
  }
  #box {
    -moz-background-clip:border;
    -moz-background-inline-policy:continuous;

    background: #FFFFFF;
    box-shadow: 2px 5px 5px #41383C;
    width:750px;
    position:relative;
    margin-left: auto;
    margin-right: auto;
    padding-left: 50px;
    padding-right: 0px;
    padding-top:40px;
    padding-bottom:20px;
  }
  </style>
  <div id="background">
   <div id="box">
  <apex:insert name="header">
   <apex:outputPanel rendered="{!IF(LogoUrl!=null,true,false)}"><img src="{!$Site.BaseUrl}{!LogoUrl}" alt="{!$Organization.Name}" /></apex:outputPanel>
  <br/><br/>
  </apex:insert>
 
  <apex:insert name="body"/>
  </div>
  <apex:insert name="footer">
  
   <!-- <c:SiteFooter /> -->
  </apex:insert>
  </div>
</apex:page>