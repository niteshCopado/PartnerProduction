   <div class="slds-grid slds-wrap">    
       <div class="slds-col slds-size--1-of-1" >
           <div style="text-align:center;font-size:xx-small;font-family:Arial;margin-top:2rem;">Copyright Â© 2007-<span id="thisYear">2017</span> DataTrim Dupe Alerts by d2b International ApS, All rights reserved. </div>
       </div>
    </div>
</div>
    
    
    </div> 
</div>    
<script>
    var d = new Date();
	document.getElementById("thisYear").innerHTML = d.getFullYear();
</script> 
   
    
       
   
 </apex:page>