<!--<apex:page id="loginPage" controller="CommunitiesLoginController" action="{!forwardToAuthPage}" title="{!$Label.site.site_login}">-->
<apex:page id="loginPage" docType="html-5.0" controller="CommunitiesLoginController" applyHtmlTag="false"  showHeader="false" title="Login" sidebar="false" standardStylesheets="false" lightningStyleSheets="true">
    <head>
        <link rel="icon shortcut" href="/file-asset/FaviconIcon?v=1"/>
        <title>Login</title>
    </head>
    
    <apex:slds />
    <style>
        body{
        background: #F3FAFC url({!URLFOR($Resource.CommunityPage_bg_images,'images/login_bg_image.png')}) no-repeat fixed center !important;
        }
        
        @font-face {
        font-family: "Nunito Sans";
        src: url('{!URLFOR($Resource.Nunito_Sans_Fonts, '/NunitoSans-Regular.ttf')}');
        src: local(custom_font), url('{!URLFOR($Resource.Nunito_Sans_Fonts, '/NunitoSans-Regular.ttf')}') format('truetype');
        }        
        
        
        .copado-icon-center{
        text-align:center;
        margin-top:7%;
        margin-bottom:29px;
        }
        .Main-container{
        margin: 0px 33%; 
        }
        .Container{
        box-shadow: 0 2px 28px -6px rgba(177,177,177,0.5);
        padding:37px 80px;
        background: #ffffff;
        border-radius:4px;
        }
        .text-required{color:#f10909;}
        .main-heading{
        color: #363839;
        font-family: "Nunito Sans";
        font-size: 24px;
        font-weight: 600;
        letter-spacing: 0;
        line-height: 29px;
        text-align:center;
        margin-bottom: 53px;
        }
        .inputfield{
        width:100%;
        border: 0.5px solid #979FAC;
        border-radius:4px;
        padding:10px !important;
        
        }
        .login-label{
        font-size:14px !important;
        color: #505255 !important;
        margin-bottom:8px;
        font-family: "Nunito Sans";
        letter-spacing: 0;
        line-height: 19px;
        }
        .bottom20{
        margin-bottom:20px;}
        
        .community-login-btn{
        text-transform: uppercase !important;
        width: 60% !important;
        margin-top: 63px !important;
        margin-bottom: 13px !important;
        color: #ffffff !important;
        cursor: pointer !important;
        background-color: #00C3EE !important;
        display: inline-block;
        text-align: center !important;
        vertical-align: middle !important;
        background-image: none;
        border: 1px solid transparent !important;
        white-space: nowrap !important;
        padding: 10px 12px !important;
        font-size: 16px !important;
        font-family: Arial !important;
        font-weight: 700 !important;
        line-height: 1.42857143 !important;
        border-radius: 4px !important;
        -webkit-user-select: none !important;
        -moz-user-select: none !important;
        -ms-user-select: none !important;
        user-select: none !important;
        outline: none !important;
        }
        .community-login-btn:hover{
        background-color: #0d1129 !important;
        }
        .forgot-link{
        margin-top  4px !important;
        color: #2F6FD4;
        font-family: "Nunito Sans";
        font-size: 14px;
        letter-spacing: 0;
        line-height: 20px;
        }
        .forgot-link:hover{
        text-decoration: none !important;
        }
        .footer-text{
        font-family: "Nunito Sans";
        font-size: 14px;
        letter-spacing: 0;
        line-height: 20px;
        color:#7C7E81;
        }
    </style>
    <apex:form styleClass="form-horizontal" id="loginFrm" >
        <div class="slds-scope">
            <div id="LoginNew" class="salesforceIdentityLoginBody2">
                <div class="Main-container">
                    <div class="copado-icon-center">
                        <img src="{!URLFOR($Resource.copadoLoginLogo)}" alt="not found" height="50" width="150"/>
                    </div>
                    <div class="Container">
                        <div class="main-heading">
                            <p>Welcome back!</p>
                        </div>
                        <div class="error-message-container bottom20">
                            <p class="text-required">
                                {!userLoginErrorMessage}
                            </p>
                        </div>
                        <div class="input-field-container" >
                            <div class="slds-grid slds-wrap bottom20">
                                <div class="slds-col ">
                                    <label class="slds-form-element__label login-label" for="unique-id-of-input"><span class="text-required">* </span>Username</label><br/>
                                    <apex:inputText value="{!username}" id="username" styleClass="form-control slds-form-element__control inputfield" required="true" />
                                </div>
                            </div>
                            <div class="slds-grid slds-wrap">
                                <div class="slds-col ">
                                    <label class="slds-form-element__label login-label" for="unique-id-of-input"><span class="text-required">* </span>Password</label><br/>
                                    <apex:inputSecret value="{!password}" id="password" styleClass="form-control slds-form-element__control inputfield"  required="true" />
                                </div>
                            </div>
                            <div class="forgot-password-text">
                                <a href="/s/ForgotPassword" class="forgot-link" >Forgot your password?</a>
                            </div>
                            <div class="slds-text-align_center loginBtn">
                                <apex:commandButton action="{!CommunityUserLogin}" styleClass="btn btn-success community-login-btn" value="LOGIN" reRender="loginFrm"  />
                            </div>
                            <div class="footer-container slds-text-align_center">
                                <div class="footer-text">
                                    <p>Donâ€™t have an account yet?
                                        <u><a href="./s/signup" class="forgot-link">Sign up</a></u>
                                    </p>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </apex:form>
</apex:page>