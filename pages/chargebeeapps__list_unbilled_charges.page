<apex:page id="thepage" controller="chargebeeapps.ListUnbilledChargesController">
<head>
    <style>
    .api-error{
        padding:5px !important;
        border:2px solid #c00 !important;
        border-radius:7px;
    }
    .cb-clean-table {
        width: 100%;
        border: 1px solid #dae0ea;
        border-radius: 3px;
        border-collapse: separate;
        text-align: left;
    }

    .cb-clean-table tr th {
        border-bottom: 1px solid #dae0ea;
        border-top: 0;
        background-color: #f4f6f8;
        color: #646468;
        box-shadow: rgba(223,232,237,0.3) 3px 3px 5px;
        white-space: nowrap;
        padding:12px 15px;
    }
    .cb-td-fix {
        width: 16%;
    }
    .cb-clean-table tr td {
        border-bottom: 1px solid #dae0ea;
        padding:12px 15px;
    }
    .text-muted {
        color: #999;
    }
    .cb-table tr td.nowrap {
        white-space: nowrap;
    }
    .disabled-select{
    -webkit-appearance: none!important;
    appearance:none !important;
    border: 0 !important;
    pointer-events:none !important;
    }
    .cb-empty{
        border: 1px solid;
        border-color: #dae0ea;
        color:#000;
        font-style: italic;
        font-size: 16px;
        width: 50%;
        margin-left: 100px;
        margin-top: 50px;
        padding: 30px;
        border-radius: 10px;
    }
    .cb-empty-btn input[type="submit"]{
        margin-top:16px;
        background: #fff!important;
        border:1px solid #dae0ea !important;
        color:black !important;
        border-radius: 5px !important;
    }
    .tablecls {
        border-collapse: collapse;
        width: 100%;
    }

    .tablecls td {
        padding: 8px;
        text-align: left;
        width:20%;
    }
    .cb-popup-footer{
        padding: 12px;
        background: rgba(0, 0, 0, 0.04);
        margin: 16px -24px -16px;
        text-align: right;
    }
    </style>
</head>
    
<apex:stylesheet value="{!URLFOR($Resource.chargebeeapps__CB_CSS)}"/>
    <div class="cb-layout">
    <apex:outputPanel >
        <apex:outputPanel rendered="{!IF(empty==true,true,false)}">  
            <div class="cb-empty">{!errMsg}
                <div class="cb-empty-btn">
                    <apex:outputLink value="/{!accountId}">back</apex:outputLink>
                </div>   
            </div>
        </apex:outputPanel> 
        <apex:outputPanel rendered="{!IF(iserr==true,true,false)}">  
            <div class="api-error">
                {!errMsg} 
            </div>
        </apex:outputPanel> 
    </apex:outputPanel>
    <apex:form id="theform" >
        <apex:pageBlock id="pb1">
            <apex:outputPanel id="Invoice-List" rendered="{!(!empty)}"  >
                <apex:pageBlockSection title="Unbilled Charges" > 
                    <div style="width:1000px;">
                        <table class="cb-clean-table">
                            <tbody>
                                <tr>
                                    <th class="cb-td-fix">Subscription</th>
                                    <th class="cb-td-fix">Date </th>
                                    <th >Details </th>
                                    <th >Amount</th>
                                </tr>
                                <apex:repeat var="ub" value="{!luc.unbilledCharges}" >
                                    <apex:outputPanel rendered="{! (!ub.isVoided)}">
                                        <tr>
                                            <td>{!ub.sub_id}</td>
                                            <td>{!ub.from_date}</td>
                                            <td>{!ub.description}&nbsp;<apex:outputText rendered="{!IF(ub.to_date!=null,true,false)}">({!ub.from_date}&nbsp;to&nbsp;{!ub.to_date})</apex:outputText><br/>
                                                <span class="text-muted">
                                                    <span id="code" class="cb-currency-code">{!ub.cCode}</span> 
                                                    <span id="money">{!ub.unitAmount}</span> Ã— {!ub.quantity}&nbsp;<apex:outputText rendered="{!IF(ub.damt!=0,true,false)}">- Discount <span id="code" class="cb-currency-code">{!ub.cCode}</span> {!ub.damt}</apex:outputText>
                                                </span>
                                            </td>
                                            <td>
                                                <span id="code" class ="cb-currency-code">{!ub.cCode}</span> 
                                                <span id="money">{!ub.amount}</span>
                                            </td>
                                        </tr>
                                    </apex:outputPanel>  
                                </apex:repeat>
                            </tbody>
                        </table>
                    </div>
                </apex:pageBlockSection>  
                <div>
                    <apex:commandButton action="{!backToContact}" style="background: white !important;color: black !important;opacity: .60;text-decoration: underline;" value="Back"/>
                    <apex:commandButton action="{!preview}" value="Invoice Now" reRender="popup"/>
                </div>   
            </apex:outputPanel>
        </apex:pageBlock>
    </apex:form>
       <apex:pageBlock id="popup">
           <apex:pageBlockSection rendered="{!showPopup}" columns="1">
               <apex:outputPanel styleClass="cb-popup-overlay" layout="block"/>
                   <apex:outputPanel styleClass="cb-popup" layout="block" >
                       <apex:include pageName="chargebeeapps__unbiled_charges_preview"/>
                   </apex:outputPanel>
           </apex:pageBlockSection>
        </apex:pageBlock>
    </div> 
</apex:page>