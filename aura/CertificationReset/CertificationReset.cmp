<aura:component controller="CertificationReset" implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:attribute name="isResetBtn" type="Boolean" default="false"/>
    <aura:attribute name="ResetBtnLbl" type="String" default=""/>
    <aura:attribute name="ConfirmMessage" type="String" default=""/>
    <aura:attribute name="loaded" type="Boolean" default="false" />
    <aura:handler  name="init" value="{!this}" action="{!c.doInit}" />
   
    <aura:if isTrue="{!v.isResetBtn}">
        <div align="center">
            <lightning:button label="{!v.ResetBtnLbl}" variant="Success" class="Resetbutton"  onclick="{!c.doClick}"/>
        </div>
    </aura:if>
    <div class="exampleHolder">
        <aura:if isTrue="{! v.loaded }">
            <lightning:spinner alternativeText="Loading" size="large" />
        </aura:if>
    </div>
</aura:component>