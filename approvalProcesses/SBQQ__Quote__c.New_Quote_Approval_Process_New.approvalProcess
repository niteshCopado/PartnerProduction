            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>New Quotes would be approved by DealDesk</description>
        <entryCriteria>
            <formula>Text(SBQQ__Opportunity2__r.Opportunity_Region__c) = &apos;EMEA&apos;</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
