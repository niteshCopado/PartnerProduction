                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>New Quotes would be approved by DealDesk</description>
        <entryCriteria>
            <formula>Text(SBQQ__Opportunity2__r.Opportunity_Region__c) = &apos;Select&apos;</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Deal Desk approval if Opp Region is Select</label>
        <name>Deal_Desk_approval_if_Opp_Region_is_Select</name>
    </approvalStep>
    <approvalStep>
