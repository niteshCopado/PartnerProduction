    <description>This is a multi step approval process and based on Opportunity Region, it will be routed to submitter&apos;s for approval</description>
    <emailTemplate>unfiled$public/Confirmation_of_sending_a_quote_to_approve</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__Type__c</field>
