<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Display Image</masterLabel>
    <description>This will take a Content Document ID (expected image) and display the image on screen.</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property label="Image ID" name="fileId" type="String" />
            <property label="Image Height" name="height" type="Integer" />
            <property label="Image Width" name="width" type="Integer" />
            <property label="Alt description" name="alt" type="String" />
            <property label="Title" name="title" type="String" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>